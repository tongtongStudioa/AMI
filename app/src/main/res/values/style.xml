<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonEditTask.AMI.Style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/boulder</item>
        <item name="android:textColor">@color/boulder</item>
        <item name="iconPadding">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="ImageButtonRemoveSelection.EditTask.AMI.Style" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="tint">@color/boulder</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="ToolbarAmi.Light" parent="Widget.MaterialComponents.Toolbar">
        <!--<item name="titleTextAppearance">@style/TextAppearance.Ami.Headline6</item>-->
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Ami.TitleLarge</item>
    </style>

    <style name="ToolbarAmi.Night" parent="Widget.MaterialComponents.Toolbar.Primary">
        <!--<item name="titleTextAppearance">@style/TextAppearance.Ami.Headline6</item>-->
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar.Night</item>
    </style>

    <style name="AppBarAmi.Light" parent="Widget.Material3.AppBarLayout">
        <item name="toolbarStyle">@style/ToolbarAmi.Light</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar.Light" parent="Widget.Material3.Toolbar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/gun_metal</item>
        <item name="android:textColorSecondary">@color/gun_metal</item>
        <item name="colorOnSurfaceVariant">@color/gun_metal</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar.Night" parent="Widget.Material3.Toolbar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
    </style>

    <style name="ThemeOverlay.AppAmi.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/french_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize text field of the text input mode. -->
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>


</resources>