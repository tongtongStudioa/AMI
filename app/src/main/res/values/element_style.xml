<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonEditTask.AMI.Style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/boulder</item>
        <item name="android:textColor">@color/boulder</item>
        <item name="iconPadding">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Ami.Button</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="ImageButtonRemoveSelection.EditTask.AMI.Style" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="tint">@color/boulder</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="TitleInputLayout.AMI.Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">50</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorContentDescription">Title can\'t be null</item>
    </style>

    <style name="RadioButton.AMI.Style" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Ami.Caption</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_radio_button_selector</item>
    </style>

    <style name="ThemeOverlay.AppAmi.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/french_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize text field of the text input mode. -->
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>


</resources>